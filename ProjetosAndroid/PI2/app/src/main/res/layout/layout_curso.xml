<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:contentPadding="5sp"
    app:cardBackgroundColor="@color/md_white_1000"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:text="@string/textocurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewnomecurso"
                android:textSize="20dp"
                android:textColor="@color/md_grey_900"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código:"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_900"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewcodigo"
                    android:text="Cógido"
                    android:textSize="12dp"
                    android:textColor="@color/md_grey_900"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turno:"
                android:textSize="12dp"
                android:textColor="@color/md_grey_900"
                android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewturno"
                    android:text="Noturno"
                    android:textColor="@color/md_grey_900"
                    android:textSize="12dp"

                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modalidade:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/md_grey_900"
                android:layout_marginTop="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semestral"
                android:id="@+id/textViewmodalidade"
                android:textSize="12dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/md_grey_900"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avaliação MEC:"
                    android:textSize="12dp"
                    android:textColor="@color/md_grey_900"
                    android:textStyle="bold"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:id="@+id/textViewavaliacaomec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/md_grey_900"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duração:"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_900"
                    android:layout_marginTop="1dp"
                    android:id="@+id/textView" />

                <TextView
                    android:id="@+id/textViewduracao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 anos"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/md_grey_900"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coordenador:"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_900"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:id="@+id/textViewcoordenador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caroline Paim"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/md_grey_900"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

                <Button
                    android:text="Ato de Autorização"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnAbrirAto"
                    android:layout_weight="1"
                    android:textSize="8dp"
                    android:textColor="@color/md_white_1000"
                    android:background="@color/md_indigo_700"/>

                <Button
                    android:text="Projeto pedagógico de curso"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnAbrirPPC"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="8dp"
                    android:textColor="@color/md_white_1000"
                    android:background="@color/md_indigo_700"/>

                <Button
                    android:id="@+id/btnAbrirAcervo"
                    android:text="Acervo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/md_white_1000"
                    android:background="@color/md_indigo_700"/>
            </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
            <Button
                    android:text="Docentes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnAbrirDocentes"
                android:textSize="8dp"
                    android:layout_weight="1"
                android:textColor="@color/md_white_1000"
                android:background="@color/md_indigo_700"/>

                <Button
                    android:text="Matriz curricular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnAbrirMatriz"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="8dp"
                    android:textColor="@color/md_white_1000"
                    android:background="@color/md_indigo_700"/>

                <Button
                    android:text="disciplinas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="8dp"
                    android:id="@+id/btnAbrirDisciplinas"
                    android:textColor="@color/md_white_1000"
                    android:background="@color/md_indigo_700" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


