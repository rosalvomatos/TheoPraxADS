<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:contentPadding="5sp"
    app:cardBackgroundColor="@color/md_white_1000"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:text="@string/nomedisciplina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewnomedisciplina"
            android:textSize="20dp"
            android:textColor="@color/md_grey_900"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Código:"
                android:textSize="12dp"
                android:textColor="@color/md_grey_900"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewcodigodisciplina"
                android:text="Cógido"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/md_grey_900"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Carga horária:"
                android:textColor="@color/md_grey_900"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewcargahorariadisciplina"
                android:text="Noturno"
                android:textSize="12dp"
                android:textColor="@color/md_grey_900"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btnAbrirDocentes"
                android:text="ver professores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_weight="1"
                android:textColor="@color/md_white_1000"
                android:background="@color/md_indigo_700"
                android:layout_marginRight="5dp"/>
            <Button
            android:id="@+id/btnAbrirEmenta"
            android:text="ver ementa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_weight="1"
                android:textColor="@color/md_white_1000"
                android:background="@color/md_indigo_700"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>