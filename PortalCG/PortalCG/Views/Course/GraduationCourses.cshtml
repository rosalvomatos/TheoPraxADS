@model List<PortalCG.Models.JsonModels.Course>
@{
    ViewBag.Title = "Cursos de Graduação";
    const int ITEM_PER_ROW = 3;
}
@if (Model?.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-@(12/ITEM_PER_ROW)">
                @Html.Partial("_CoursePartial", item)
            </div>
        }
    </div>
}